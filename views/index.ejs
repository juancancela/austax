<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<form action="/payslip" method="get">
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" name="firstName" placeholder="John"/>
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" name="lastName" placeholder="Doe"/>
    </div>
    <div>
        <label for="annualSalary">Annual Salary:</label>
        <input type="text" name="annualSalary" placeholder="65000"/>
    </div>
    <div>
        <label for="superRate">Super Rate:</label>
        <input type="text" name="superRate" placeholder="0.3"/>
    </div>

    <div>
        <label for="startDate">Start Date:</label>
        <input type="text" name="startDate" placeholder="In example: 12/12/14"/>
    </div>

    <div class="button">
        <button type="submit">Calculate Payslip</button>
    </div>
</form>
</body>
</html>